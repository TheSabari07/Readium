<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.collabia.bookrec.controller.DashboardController"
            prefHeight="600.0" prefWidth="1000.0">
    
    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
            </padding>
            
            <Label text="Readium" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <TextField fx:id="searchField" promptText="Search books..." prefWidth="300.0"/>
            <Button fx:id="profileButton" text="Profile" onAction="#handleProfile"/>
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout"/>
        </HBox>
    </top>
    
    <left>
        <VBox spacing="10.0" style="-fx-background-color: #ecf0f1;" prefWidth="200.0">
            <padding>
                <Insets top="20.0" right="10.0" bottom="20.0" left="10.0"/>
            </padding>
            
            <Button fx:id="dashboardButton" text="Dashboard" onAction="#handleDashboard" 
                    maxWidth="Infinity"/>
            <Button fx:id="recommendationsButton" text="Recommendations" onAction="#handleRecommendations" 
                    maxWidth="Infinity"/>
            <Button fx:id="settingsButton" text="Settings" onAction="#handleSettings" 
                    maxWidth="Infinity"/>
        </VBox>
    </left>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="20.0">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>
                
                <Label text="Recommended Books" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <GridPane fx:id="booksGridPane" hgap="15.0" vgap="15.0">
                    <!-- Book cards will be added dynamically -->
                </GridPane>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
