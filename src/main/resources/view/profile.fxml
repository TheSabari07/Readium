<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.collabia.bookrec.controller.ProfileController"
            prefHeight="600.0" prefWidth="800.0">
    
    <top>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <padding>
                <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
            </padding>
            
            <Button fx:id="backButton" text="â† Back" onAction="#handleBack"/>
            <Label text="My Profile" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="30.0">
                <padding>
                    <Insets top="30.0" right="40.0" bottom="30.0" left="40.0"/>
                </padding>
                
                <VBox spacing="15.0">
                    <Label text="User Information" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    
                    <HBox spacing="10.0">
                        <Label text="Username:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="usernameLabel"/>
                    </HBox>
                    
                    <HBox spacing="10.0">
                        <Label text="Email:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="emailLabel"/>
                    </HBox>
                </VBox>
                
                <VBox spacing="15.0">
                    <Label text="Reading Statistics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    
                    <HBox spacing="10.0">
                        <Label text="Books Read:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="booksReadLabel"/>
                    </HBox>
                    
                    <HBox spacing="10.0">
                        <Label text="Books Liked:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="booksLikedLabel"/>
                    </HBox>
                </VBox>
                
                <VBox spacing="15.0">
                    <Label text="Favorite Genres" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <FlowPane fx:id="genresFlowPane" hgap="10.0" vgap="10.0">
                        <!-- Genre tags will be added dynamically -->
                    </FlowPane>
                    <Button fx:id="editGenresButton" text="Edit Genres" onAction="#handleEditGenres"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
