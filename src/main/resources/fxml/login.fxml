<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.collabia.bookrec.controller.LoginController"
      alignment="CENTER" spacing="20" 
      style="-fx-background-color: #f5f5f5;"
      prefWidth="400" prefHeight="500">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
    <Label text="Readium" style="-fx-text-fill: #2196F3;">
        <font>
            <Font name="System Bold" size="32"/>
        </font>
    </Label>
    
    <Label text="Login to your account" style="-fx-text-fill: #666;">
        <font>
            <Font size="14"/>
        </font>
    </Label>
    
    <VBox spacing="15" maxWidth="300">
        <Label text="Email" style="-fx-text-fill: #333;"/>
        <TextField fx:id="emailField" promptText="Enter your email"
                   style="-fx-padding: 10; -fx-background-radius: 5;"/>
        
        <Label text="Password" style="-fx-text-fill: #333;"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password"
                       style="-fx-padding: 10; -fx-background-radius: 5;"/>
        
        <Label fx:id="errorLabel" style="-fx-text-fill: #f44336;" 
               wrapText="true" visible="false"/>
        
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                maxWidth="Infinity" 
                style="-fx-background-color: #2196F3; -fx-text-fill: white; 
                       -fx-padding: 12; -fx-background-radius: 5; -fx-font-size: 14;">
        </Button>
        
        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" style="-fx-text-fill: #666;"/>
            <Button fx:id="signupLink" text="Sign Up" onAction="#handleSignupLink"
                    style="-fx-background-color: transparent; -fx-text-fill: #2196F3; 
                           -fx-underline: true; -fx-cursor: hand;"/>
        </HBox>
    </VBox>
    
</VBox>
