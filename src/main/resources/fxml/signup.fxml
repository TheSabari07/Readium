<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.collabia.bookrec.controller.SignupController"
      alignment="CENTER" spacing="20" 
      style="-fx-background-color: #f5f5f5;"
      prefWidth="400" prefHeight="600">
    
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>
    
    <Label text="Create Account" style="-fx-text-fill: #2196F3;">
        <font>
            <Font name="System Bold" size="28"/>
        </font>
    </Label>
    
    <Label text="Sign up to get started" style="-fx-text-fill: #666;">
        <font>
            <Font size="14"/>
        </font>
    </Label>
    
    <VBox spacing="12" maxWidth="300">
        <Label text="Name" style="-fx-text-fill: #333;"/>
        <TextField fx:id="nameField" promptText="Enter your full name"
                   style="-fx-padding: 10; -fx-background-radius: 5;"/>
        
        <Label text="Email" style="-fx-text-fill: #333;"/>
        <TextField fx:id="emailField" promptText="Enter your email"
                   style="-fx-padding: 10; -fx-background-radius: 5;"/>
        <Label fx:id="emailErrorLabel" style="-fx-text-fill: #f44336; -fx-font-size: 11;" 
               visible="false"/>
        
        <Label text="Password" style="-fx-text-fill: #333;"/>
        <PasswordField fx:id="passwordField" promptText="Create a password"
                       style="-fx-padding: 10; -fx-background-radius: 5;"/>
        
        <Label text="Confirm Password" style="-fx-text-fill: #333;"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password"
                       style="-fx-padding: 10; -fx-background-radius: 5;"/>
        <Label fx:id="passwordErrorLabel" style="-fx-text-fill: #f44336; -fx-font-size: 11;" 
               visible="false"/>
        
        <Label fx:id="errorLabel" style="-fx-text-fill: #f44336;" 
               wrapText="true" visible="false"/>
        
        <Button fx:id="signupButton" text="Sign Up" onAction="#handleSignup"
                maxWidth="Infinity" 
                style="-fx-background-color: #2196F3; -fx-text-fill: white; 
                       -fx-padding: 12; -fx-background-radius: 5; -fx-font-size: 14;">
        </Button>
        
        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" style="-fx-text-fill: #666;"/>
            <Button fx:id="loginLink" text="Login" onAction="#handleLoginLink"
                    style="-fx-background-color: transparent; -fx-text-fill: #2196F3; 
                           -fx-underline: true; -fx-cursor: hand;"/>
        </HBox>
    </VBox>
    
</VBox>
